@using NTCY.Models.Club;
@{
    ViewBag.Title = "ViewCommittee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <h1> Committee Details</h1>
                    <div class="card-header">
                        <a href="@Url.Action("CreateCommittee", "ClubCommittee")" class="btn btn-primary1" data-toggle="tooltip" data-placement="bottom" title="Add Committee">
                            <span class="fa-solid fa-user-plus" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped table-sm" cellspacing="0" width="100%" ">
                            <thead>
                                <tr>
                                    <th> Club Name </th>
                                    <th> Chairman </th>
                                    <th> President </th>
                                    <th> Vice President </th>
                                    <th> Secretary </th>
                                    <th> Treasurer </th>
                                    <th> Committee Members </th>
                                    <th> Status </th>
                                    <th> Start Date </th>
                                    <th> End Date </th>
                                    <th> Edit </th>
                                    <th> Delete </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                if (ViewData["CommitteeList"] != null)
                                {
                                if (ViewData.Values != null && ViewData.Values.Count() > 0)
                                {
                                foreach (var Model in ViewBag.CommitteeList as List<ClubCommittee>)
                                {
                                    <tr>
                                        <td>@Model.ClubName</td>
                                        <td>@Model.Chairman</td>
                                        <td>@Model.President</td>
                                        <td>@Model.VicePresident</td>
                                        <td>@Model.Secretary</td>
                                        <td>@Model.Treasurer</td>
                                        <td>@Model.CommitteeMembers</td>
                                        <td>@Model.Status</td>
                                        <td>@Model.StartDate</td>
                                        <td>@Model.EndDate</td>

                                        <td> @Html.ActionLink(" ","UpdateCommittee","ClubCommittee", new { CommitteeId = Model.CommitteeId }, new { @class = "btn btn-block btn-primary fas fa-edit", data_toggle = "tooltip", data_placement = "bottom" }) </td>
                                        <td> @Html.ActionLink(" ","DeleteCommittee","ClubCommittee", new { CommitteeId = Model.CommitteeId }, new { @class = "btn btn-block bg-gradient-danger fa fa-trash-o", data_toggle = "tooltip", data_placement = "bottom" }) </td>
                                    </tr>
                                }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            @ViewBag.message
                                        </td>
                                    </tr>
                                }
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
    <div class="modal fade" id="ModalMember" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" style="color:black;font-family:'Bookman Old Style'" id="myModalLabel"><b>Member Details</b></h4>
                    </div>
                    <div style="color:darkslateblue" class="modal-body">
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-area">
            @ViewBag.message
            @ViewBag.innerEx
        </div>
    </div>
    @Html.Raw(TempData["msg"])
</section>



