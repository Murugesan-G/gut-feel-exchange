<script>
    //$('#doi').datepicker({
    //    format: 'dd/mm/yyyy'
    //});
    //$(document).ready(function () {
    //    $("#doi").datepicker();
    //});




    $(document).ready(function () {
        
        $("#doi").val("@ViewData["doi"]")

        $("#phone").keypress(function (e) {
            if ((e.which >= 58 && e.which <= 126) || (e.which >= 33 && e.which <= 42) ||
                (e.which >= 44 && e.which <= 47)) {
                $('#errmsgPhoneNo').css('color', 'red');
                $("#errmsgPhoneNo").html("Invalid Data").show().fadeOut("slow");
                return false;
            }
        })
        $("#mobile").keypress(function (e) {
            if ((e.which >= 58 && e.which <= 126) || (e.which >= 33 && e.which <= 42) ||
                (e.which >= 44 && e.which <= 47)) {
                $('#errmsgMobNo').css('color', 'red');
                $("#errmsgMobNo").html("Invalid Data").show().fadeOut("slow");
                return false;
            }
        })
        $("#email").keypress(function (e) {
            if (e.which == 32) {

                return false;
            }
        })

        $('#Btn_Submit').click(function () {


            if ($('#clubname').val() == '' || $('#clubname').val() == "") {
                alert('Club Name field is required !!!');
                $('#clubname').focus();
                return false;
            }
            else if ($('#address').val() == '' || $('#address').val() == "") {
                alert('Address field is required !!!');
                $('#address').focus();
                return false;
            }
            else if ($('#registration').val() == '' || $('#registration').val() == "") {
                alert('Registration Number field is required !!!');
                $('#registration').focus();
                return false;
            }
            else if ($('#liquorlicense').val() == '' || $('#liquorlicense').val() == "") {
                alert('Liquor License field is required !!!');
                $('#liquorlicense').focus();
                return false;
            }
            else if ($('#restaurantLicense').val() == '' || $('#restaurantLicense').val() == "") {
                alert('Restaurant License field is required !!!');
                $('#restaurantLicense').focus();
                return false;
            }
            else if ($('#gst').val() == '' || $('#gst').val() == "") {
                alert('GST field is required !!!');
                $('#gst').focus();
                return false;
            }
            else if ($('#pan').val() == '' || $('#pan').val() == "") {
                alert('PAN field is required !!!');
                $('#pan').focus();
                return false;
            }
            else if ($('#tan').val() == '' || $('#tan').val() == "") {
                alert('TAN field is required !!!');
                $('#tan').focus();
                return false;
            }
            else if ($('#mobile').val() == '' || $('#mobile').val() == "") {
                alert('Mobile Number field is required !!!');
                $('#mobile').focus();
                return false;
            }
            else if ($('#contactPerson').val() == '' || $('#contactPerson').val() == "") {
                alert('Contact Person field is required !!!');
                $('#contactPerson').focus();
                return false;
            }
            else if ($('#phone').val() == '' || $('#phone').val() == "") {
                alert('Phone field is required !!!');
                $('#phone').focus();
                return false;
            }
            else if ($('#email').val() == '' || $('#email').val() == "") {
                alert('EmailId field is required !!!');
                $('#email').focus();
                return false;
            }
            else if ($('#amenities').val() == '' || $('#amenities').val() == "") {
                alert('Amenities field is required !!!');
                $('#amenities').focus();
                return false;
            }
            else if ($('#about').val() == '' || $('#about').val() == "") {
                alert('About field is required !!!');
                $('#about').focus();
                return false;
            }
            else if ($('#doi').val() == '' || $('#doi').val() == "") {
                alert('Date Of Incorporation field is required !!!');
                $('#doi').focus();
                return false;
            }
            return true;

        })
        $("#doi").keypress(function (e) {
            if (e.which <= 47 || e.which >= 58) {
                return false;
            }
        })

    });
</script>
