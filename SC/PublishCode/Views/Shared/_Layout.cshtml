                        </a>
                       
                        }
                    </li>

                    @if (User.IsInRole("Admin")||User.IsInRole("FrontOffice")||User.IsInRole("Management"))
                    {
                    <li>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <img src="~/Images/frontoffice.png" />
                            Front Office<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("ViewAllFrontOfficePayment", "FrontOffice")">Payments</a></li>
                            <li><a href="@Url.Action("Attendance", "FrontOffice")">Attendance</a></li>
                            <li><a href="@Url.Action("Room_Bookings", "RoomBooking")">Room Bookings</a></li>
                        </ul>
                    </li>
                    }
                    @if (User.IsInRole("Admin")||User.IsInRole("Management")||User.IsInRole("StoreManager"))
                    {
                    <li>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <img src="~/Images/kitty.png" />
                            Store<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("AddStockInward", "StockInward")">Stock Inward</a></li>
                            <li><a href="@Url.Action("AddStockAdjustment", "StockAdjustment")">Stock Adjustment</a></li>
                        </ul>
                    </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Management"))
                    {
                    @*<li>
                        <a href="@Url.Action("Index", "TallyIntegration")">
                            <img src="~/Images/accounts.png" />
                            Accounts
                        </a>
                    </li>*@
                    <li>
                        
                            <a href="~/Report/ASPX/UserReport.aspx">  
                            <img src="~/Images/accounts.png" />
                            Reports
                        </a>
                    </li>
                    }
                    @*@if (User.IsInRole("Admin")||User.IsInRole("Management"))
                    {
                        <li>
                            <a href="#">
                                <img src="~/Images/accounts.png" />
                                Reports
                            </a>
                        </li>
                    }*@
                    @if (User.IsInRole("Admin")||User.IsInRole("Chef") || User.IsInRole("Management"))
                    {
                    <li>
                        <a href="@Url.Action("ViewAllOrders", "KitchenOrder")">
                            <img src="~/Images/kitchen.png" />
                            Kitchen
                        </a>
                    </li>
                    }
                    @if (User.IsInRole("Admin")||User.IsInRole("BarTender") || User.IsInRole("Management"))
                    {
                    <li>
                        <a href="@Url.Action("ViewAllOrders", "LiquorAreaOrder")">
                            <img src="~/Images/liquor.png" />
                            Bar
                        </a>
                    </li>
                    }
                    @if (User.IsInRole("Admin")||User.IsInRole("KittyPaymentCollector") || User.IsInRole("Management"))
                    {
                    <li>

                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <img src="~/Images/cardtable.png" />
