                        {
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <img src="~/Images/dinning.png" />
                            Orders
                            <span class="caret"></span>
                        </a>
                        }
                        <ul class="dropdown-menu">
                            @if (User.IsInRole("Admin") || User.IsInRole("Management") || User.IsInRole("RestaurantWaiter"))
                            {
                            <li><a href="@Url.Action("TakeFoodOrder", "FoodOrder")">Food Order</a></li>
