                        </a>

                        <ul class="dropdown-menu">
                            @if (User.IsInRole("Admin")||User.IsInRole("KittyPaymentCollector") || User.IsInRole("Management"))
                            {
                                <li><a href="@Url.Action("Collection", "Collection")">Collection</a></li>
                                }
                            @if (User.IsInRole("Admin")||User.IsInRole("KittyPaymentCollector") || User.IsInRole("Management"))
                            {
                                <li><a href="@Url.Action("KittyPaymentView", "KittyPayment")">Payment</a></li>
