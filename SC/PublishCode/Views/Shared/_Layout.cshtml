                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <img src="~/Images/login.png" />

                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @*<li><a href="#">Help</a></li>
                                <li><a href="#">Settings</a></li>*@
                            <li>@Html.Partial("_LoginPartial")</li>
                        </ul>
