    <link rel="stylesheet" href="~/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <style>
        body{
            background-color: #000;
            overflow:hidden;
            height:100%;
        }
        .navbar-inverse .navbar-nav > li > a {
            color: #ffffff;
        }

        .logo {
            color: #fff !important;
        }
    </style>
    <script>
        function showmenu() {
            $("#usersubmenu").show();
        }
    </script>

</head>
<body>
    <div class="navbar navbar-inverse" style="margin-bottom:0px;">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="logo">
                                      <img src="~/Images/NTCYLogo-01.png" alt="New Town Club Yelahanka" />
                </div>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right mainmenu" style="padding-right: 12px;">

                    <li>
