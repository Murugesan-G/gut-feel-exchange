    <div class="container-fluid" style="background-color: #1a1a1a;height: 90%;overflow: hidden;padding: 0px;">
        @RenderBody()

    </div>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 footer" id="app_footer">
        <p style="margin: 0px; padding: 0px;">&copy; @DateTime.Now.Year - Powered By SPIGOT Software Pvt.Ltd</p>
    </div>


    @RenderSection("scripts", required: false)




