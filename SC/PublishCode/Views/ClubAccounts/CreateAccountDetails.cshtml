<div class="col-xs-8 col-sm-8 col-md-10 col-lg-10 main"><div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 page-title-outer">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 page-title">Tally Integration Details</div>
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 page-title-btn">

        <a href="@Url.Action("ViewAccountDetails", "ClubAccounts")" class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="View All">
            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
        </a>
    </div>
</div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 workarea-outer">



        @using (Html.BeginForm("CreateAccountDetails", "ClubAccounts", new { @class = "beginform-outer" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 scrolling-area">
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 form-outer">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                      Url
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 textbox-area">
                        @Html.TextBox("Url", ViewData["Url"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Url" })

                    </div>
                       <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                       Port
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 textbox-area">
                        @Html.TextBox("Port", ViewData["Port"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Port" })
                        <span id="errmsgPort"></span>
                    </div>
                       <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                       Username
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 textbox-area">
                        @Html.TextBox("Username", ViewData["Username"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Username" })

                    </div>
                       <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                     Password
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 textbox-area">
                        @Html.TextBox("Password", ViewData["Password"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Password" })

                    </div>
                       <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                   Ledger 1
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 textbox-area">
                        @Html.TextBox("Ledger1", ViewData["Ledger1"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Ledger1" })

                    </div>
                       <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                      Ledger 2
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 textbox-area">
                        @Html.TextBox("Ledger2", ViewData["Ledger2"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Ledger2" })

                    </div>
                       <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                     Ledger 3
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 textbox-area">
                        @Html.TextBox("Ledger3", ViewData["Ledger3"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Ledger3" })

                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                        Ledger 4
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 textbox-area">
                        @Html.TextBox("Ledger4", ViewData["Ledger4"], new { @maxlength = "20", @class = "blckthm-form-control", @id = "Ledger4" })

                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-right">
                        Status
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 dropdown">
                        <select id="Status" name="Status" class="blckthm-form-control">
                            <option value="">Select Status</option>
                            <option id="active" value="Active">Active</option>
                            <option id="inActive" value="InActive">InActive</option>
                            <option id="disabled" value="Disabled">Disabled</option>

                        </select>
                    </div>

                </div>

                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 form-outer">

                </div>
            </div>
            
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 action-outer">
                @*@Html.ActionLink("Submit", "Club_master", "Admin", null, new { @class = "btn btn-primary  " })*@
                @*<input type="submit" value="@ViewBag.submit" class="btn btn-primary" id="Btn_Submit" />*@
                    <button type="submit" value="@ViewBag.submit" class="btn btn-primary" data-toggle="tooltip" title="Save" id="Btn_Submit">
                        <span class="glyphicon glyphicon-floppy-save"> </span>
                    </button>
            </div>

            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 label-area">
                <p>@ViewBag.message</p>
                <p>@ViewBag.innerEx</p>

            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#Status").val("@ViewData["Status"]")

        $("#Port").keypress(function (e) {
            if ((e.which >= 58 && e.which <= 126) || (e.which >= 33 && e.which <= 42) ||
                (e.which >= 44 && e.which <= 47)) {
                $('#errmsgPort').css('color', 'red');
                $("#errmsgPort").html("Only Digits").show().fadeOut("slow");
                return false;
            }
        })
    })



    $('#Btn_Submit').click(function () {
        if ($('#Url').val() == '' || $('#Url').val() == "") {
            alert('Url field is required !!!');
            $('#Url').focus();
            return false;
        }

        else if ($('#Port').val() == '' || $('#Port').val() == "") {
            alert('Port is Required!!!')
            $('#Port').focus();
            return false;
        }
        else if ($('#Username').val() == '' || $('#Username').val() == "") {
            alert('Usernameis Required!!!')
            $('#Username').focus();
            return false;
        }
        if ($('#Password').val() == '' || $('#Password').val() == "") {
            alert('Password field is required !!!');
            $('#Password').focus();
            return false;
        }

        else if ($('#Port').val() == '' || $('#Port').val() == "") {
            alert('Port is Required!!!')
            $('#Port').focus();
            return false;
        }
        else if ($('#Ledger1').val() == '' || $('#Ledger1').val() == "") {
            alert('Ledger1 is  Required!!!')
            $('#Ledger1').focus();
            return false;
        }
        else if ($('#Ledger2').val() == '' || $('#Ledger2').val() == "") {
            alert(' Ledger2 is Required!!!')
            $('#Ledger2').focus();
            return false;
        }
        else if ($('#Ledger3').val() == '' || $('#Ledger3').val() == "") {
            alert('Ledger3 is  Required!!!')
            $('#Ledger3').focus();
            return false;
        } else if ($('#Ledger4').val() == '' || $('#Ledger4').val() == "") {
            alert(' Ledger4 is Required!!!')
            $('#Ledger4').focus();
            return false;
        }
        else if ($('#Status').val() == "1" || $('#Status').val() == "") {
            alert('Please Select Status!!!')
            $('#Status').focus();
            return false;
        }

        else { return true; }
    })

</script>


