<script type="text/javascript">
    $(document).ready(function () {
        $("#Status").val("@ViewData["Status"]");
        //email id text box will not allow white spaces
        $('#Btn_Submit').click(function () {
           // debugger;
            if ($('#IPAddress').val() == '' || $('#IPAddress').val() == "") {
                alert('IP Address field required !!!');
                $('#IPAddress').focus();
                return false;
            }

            //else if ($('#DataBaseName').val() == '' || $('#DataBaseName').val() == "") {
            //    alert('DataBaseName is Required!!!')
            //    $('#DataBaseName').focus();
            //    return false;
            //}
            else if ($('#Catalog').val() == '' || $('#Catalog').val() == "") {
                alert('Catalog is Required!!!')
                $('#Catalog').focus();
                return false;
            }

            else if ($('#Username').val() == '' || $('#Username').val() == "" || $('#Username').val() <= "17") {
                alert('Username is Required!!!')
                $('#Username').focus();
                return false;
            }
            else if ($('#Password').val() == '' || $('#Password').val() == "") {
                alert('Password is Required!!!')
                $('#Password').focus();
                return false;
            }
            else if ($('#Status').val() == '' || $('#Status').val() == "" || $('#Status').val() == "Select Status") {
                alert('please Select Status!!!')
                $('#Status').focus();
                return false;
            }
            else { return true; }
        })
    });

</script>